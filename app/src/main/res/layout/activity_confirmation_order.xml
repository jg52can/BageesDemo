<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmationOrderActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="381dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Enter the shipping address"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/txt_total_amount_confirm"
        android:gravity="left"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Total: " />

    <EditText
        android:id="@+id/edt_txt_name_confirm"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/edt_txt_address_confirm"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Your Address"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/edt_txt_city_confirm"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/edt_txt_zip_confirm"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ZIP"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/edt_txt_phone_confirm"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/btn_activity_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        />

</LinearLayout>